<!DOCTYPE html>

<head>
    <meta charset="utf-8">
    <title>ToDo List</title>
    <link rel="stylesheet" href="css/styles.css">
</head>

<body>
    <div class="box" id="heading">
        <h1>
            <%=kindOfDay%>
        </h1>
    </div>
    <div class="box">

        <% newListItem.forEach(function(item){%>
            <form action="/delete" method="POST">
                <div class="item">
                    <input type="checkbox" name="checkbox" value="<%=item._id%>" onChange="this.form.submit()">
                    <p class="">
                        <%= item.name %>
                    </p>
                </div>
                <input type="hidden" name="listName" value="<%=kindOfDay%>">
            </form>
            <%  });  %>
                <form id="item" action="/" method="POST">
                    <input type="text" name="item" placeholder="New item" autocomplete="off">
                    <button type="submit" name="list" value="<%=kindOfDay%>">+</button>
                </form>

    </div>




</body>

</html>